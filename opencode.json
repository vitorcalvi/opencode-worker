{
  "$schema": "https://opencode.ai/config.json",
  "theme": "default-dark",
  "logLevel": "INFO",
  "default_agent": "sisyphus",
      "model": "opencode/gpt-5-nano",
  "tui": {
    "scroll_acceleration": {
      "enabled": true
    },
    "diff_style": "auto"
  },
  "agent": {
    "sisyphus": {
      "description": "Worker agent. Receives tasks and implements code using opencode native tools.",
      "mode": "primary",
"model": "opencode/gpt-5-nano",
      "temperature": 0.2
    }
  },
  "permission": {
    "edit": "allow",
    "read": "allow",
    "bash": {
      "*": "allow"
    },
    "webfetch": "allow",
    "websearch": "allow",
    "codesearch": "allow",
    "lsp": "allow",
    "grep": "allow"
  }
}
